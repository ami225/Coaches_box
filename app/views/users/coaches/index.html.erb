<%= form_with url: coaches_coaches_path, method: :get, class: '自由に' do %>
　<h5>コーチのタグ検索</h5>
  <%= select_tag :tag_id,
    options_from_collection_for_select(Tag.all, :id, :tag_name, params[:tag_id]),
    {
      prompt: 'すべて',
      class: '自由に',
      onchange: 'submit(this.form);'
    }%>
<% end %>
 <table class="table table-hover mb-0">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><i class="far fa-user fa-fw"></i>Coach</th>
        <th scope="col"><i class="far fab fa-speakap fa-fw"></i>自己紹介</th>
        <th scope="col"><i class="far fa-address-card fa-fw"></i>Coach Profile</th>
    </thead>
    <tbody>
      <% @coaches.each do |coach| %>
        <tr>
          <th>
            <i class="fas fa-user-circle fa-fw"></i><%= coach.name %>
          </th>
          <th>
            <%= coach.introduction %>
          </th>
          <th>
            <%= link_to"Coach Profileへ", coach_path(coach.id) %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>