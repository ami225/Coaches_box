<div class="container pt-5">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <div class="card shadow">
        <% if @post.post.attached? %> <!-- @postがpost(video)を持っているか確かめる -->
        <div class="card-body">
          <div class="card-title ">
            <h5><%= @post.title %></h5>
          </div>
          <p class="card-text">
            <h5>説明</h5>
            <p><%= @post.body %></p>
          </p>
          <div class="video-post mx-auto" style="width: 500px;">
           <%= video_tag rails_blob_path(@post.post), size: "500x300",autoplay: true, muted: true %>
          </div>
        <% end %>
        <br>
        <h5>投稿者</h5>
        <%= @post.coach.name %>
        <%= link_to "Coach Profile", coaches_coach_path(@post.coach_id) %>を見る
      </div>
    </div>
</div>
