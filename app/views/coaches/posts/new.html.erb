<div class="container pt-5">
  <div class="post-edit mx-auto" style="width: 600px;">
    <div class="pst"><p>NEW POST</p></div>
     <div class="row">
       <%= form_with model: @post, url: coaches_posts_path, local: true do |form| %>
        <p>title</p><%= form.text_field :title, size: "70" %> <br>
        <p>説明</p><%= form.text_area :body, size: "70x10" %> <br>
        <p>投稿動画</p><%= form.file_field :post, size: "70" %> <br>
        <br>
        <%= form.submit '投稿する', class:"btn btn-outline-primary" %>
       <% end %>
     </div>
  </div>
</div>