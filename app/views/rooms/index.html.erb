<% if user_signed_in? %>
  <h1>CoachたちとのDM一覧</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Coach</th>
        <th scope="col">アドバイスをもらおう</th>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><% room.coach.name %></td>
          <td><%= link_to "DM", room_path(room.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% if coach_signed_in? %>
<div class="chat-index pt-3" style= "text-align: center">
  <h5>選手たちからの質問一覧</h5>
</div>
  <table class="table table-hover mb-0">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><i class="far fa-user fa-fw"></i>選手</th>
        <th scope="col"><i class="far fa-comment-dots fa-fw"></i>質問に答える</th>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
       <tr>
          <th><i class="fas fa-user-circle fa-fw"></i><%= room.user.name %></th>
          <th><%= room.user.name %>との<%= link_to "チャットルームへ", room_path(room.id) %></th>
       </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
 